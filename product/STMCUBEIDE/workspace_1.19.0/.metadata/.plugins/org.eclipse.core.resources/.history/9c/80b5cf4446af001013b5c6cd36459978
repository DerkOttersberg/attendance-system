/* derkprint.c */
#include "qprint.h"
#include <stdio.h>
#include <stdarg.h>

static VIRT_UART_HandleTypeDef *huart_ptr = NULL;

void derkprint_init(VIRT_UART_HandleTypeDef *huart) {
    huart_ptr = huart;
}

void derkprint(const char* format, ...) {
    if (huart_ptr == NULL) {
        return; // Not initialized
    }

    char buffer[128];
    va_list args;
    va_start(args, format);
    int len = vsnprintf(buffer, sizeof(buffer), format, args);
    va_end(args);

    if (len > 0) {
        VIRT_UART_Transmit(huart_ptr, (uint8_t*)buffer, len);
    }
}
